<div class='col-sm-6 col-lg-4'>
    <div class="card">
        <div class="card-topper" style='background-image: url(<%= post.thumb %>);'>
        </div>

        <div class="card-block">
        <h4 class="card-title"><%= link_to post.title, post %> </h4>
        <h7><%= link_to Category.find(post.category_id).name,category_path(post.category_id) %></h7>
        <p class="published-date"><%= post.display_day_published %></p>
        <pclass="card-text"><%= truncate(post.description, length: 130) %></p>
        <%= link_to 'Read', post, class: "btn btn-outline-success" %>
        </div>
    </div>
</div>