

<% provide(:page_title, @post.title) %> 
<% provide(:author, 'active') %>

<div>
  <%= link_to 'Edit', edit_authors_post_path(@post), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Remove', authors_post_path(@post), method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning' %>
</div>
<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
    <h1><%= @post.title %></h1>
    <h5><%= link_to Category.find(@post.category_id).name %></h5>
    <p>Jan 14, 2018</p>
    <%= image_tag @post.thumb.url if @post.thumb? %>
  </div>
    <%= @post.body.html_safe %>  
</div>
    <%= render 'layouts/footer'%>
</div>