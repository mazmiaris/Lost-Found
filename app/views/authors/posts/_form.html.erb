<%= form_for(post,url: url) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= Post %></h5>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="field">
            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>
        </li>

        <li class="list-group-item">
          <div class="field">
            <%= form.label :thumb %>
            <%= form.file_field :thumb %>   
          </div>
        </li>

        <li class="list-group-item">
          <div class="field">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
        </li>

        <li class="list-group-item">
         <div class="actions">
           <%= form.submit "Save Post", class: 'btn btn-success btn-block' %>
         </div>
        </li>

        <li class="list-group-item">
          <div class="field">
            <%= form.label :category %>
            <%= select_tag(:category_id, options_for_select(@categories))%>
          </div>
        </li>

        

        </ul>
      </div>
      <% if @post.persisted? %>
      <%= link_to 'Show', @post %> |
      <% end %>
      <%= link_to 'Back', authors_posts_path %>
    </div>

      <div class= "col-md-8">
        <div class="field">
          <%= form.label :body %>
          <%= form.text_area :body %>
        </div> 
       </div>
  </div>



 
 
<% end %>
